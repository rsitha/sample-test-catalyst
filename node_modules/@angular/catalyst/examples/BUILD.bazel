load("//tools:karma.bzl", "karma_web_test_suite")
load("//tools:angular_ts.bzl", "ng_ts_project")

ng_ts_project(
    name = "example_component",
    srcs = [
      "example_component.ts",
      "example_module.ts",
    ],
    angular_assets = ["example_component.ng.html"],
    deps = [
      "@npm//@angular/core",
      "@npm//@angular/common",
    ],
)

ng_ts_project(
    name = "example_component_test_lib",
    srcs = [
      "example_component_test.ts",
    ],
    deps = [
        ":example_component",
        "//:catalyst",
    ],
)

karma_web_test_suite(
    name = "example_component_test",
    browsers = [
        "@io_bazel_rules_webtesting//browsers:chromium-local",
    ],
    specs = [
        ":example_component_test_lib",
    ],
    deps = [
        ":example_component_test_lib",
    ],
)
